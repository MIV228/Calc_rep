<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/w_main"
    tools:context=".MainActivity2">

  <Button
      android:id="@+id/w_pereh"
      style="@style/light_style"
      android:layout_width="50dp"
      android:layout_height="205dp"
      android:text="/"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="MissingConstraints" />

  <LinearLayout
      android:id="@+id/w_c_keyboard"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:layout_editor_absoluteX="-16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/w_c_expression"
          style="@style/light_style"
          android:ellipsize="start"
          android:gravity="end"
          android:singleLine="true"
          android:text="Выражение"
          android:textSize="40sp"
          app:layout_constraintBottom_toTopOf="@+id/c_keyboard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/w_c_result"
          style="@style/light_style"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:ellipsize="end"
          android:gravity="end"
          android:maxLines="1"
          android:text="Ответ"
          android:textSize="40sp"
          app:layout_constraintBottom_toTopOf="@+id/c_keyboard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/w_c_ac"
          style="@style/light_style"
          android:scaleType="center"
          android:src="@mipmap/ac_light" />

      <TextView
          android:id="@+id/w_c_open"
          style="@style/light_style"
          android:text="(" />

      <TextView
          android:id="@+id/w_c_close"
          style="@style/light_style"
          android:text=")" />

      <TextView
          android:id="@+id/w_c_plus"
          style="@style/light_style"
          android:text="+" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/w_c_seven"
          style="@style/light_style"
          android:text="7" />

      <TextView
          android:id="@+id/w_c_eight"
          style="@style/light_style"
          android:text="8" />

      <TextView
          android:id="@+id/w_c_nine"
          style="@style/light_style"
          android:text="9" />

      <TextView
          android:id="@+id/w_c_minus"
          style="@style/light_style"
          android:text="-" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/w_c_four"
          style="@style/light_style"
          android:text="4" />

      <TextView
          android:id="@+id/w_c_five"
          style="@style/light_style"
          android:text="5" />

      <TextView
          android:id="@+id/w_c_six"
          style="@style/light_style"
          android:text="6" />

      <TextView
          android:id="@+id/w_c_multi"
          style="@style/light_style"
          android:text="x" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/w_c_one"
          style="@style/light_style"
          android:text="1" />

      <TextView
          android:id="@+id/w_c_two"
          style="@style/light_style"
          android:text="2" />

      <TextView
          android:id="@+id/w_c_three"
          style="@style/light_style"
          android:text="3" />

      <TextView
          android:id="@+id/w_c_div"
          style="@style/light_style"
          android:text=":" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/w_c_dot"
          style="@style/light_style"
          android:text="." />

      <TextView
          android:id="@+id/w_c_zero"
          style="@style/light_style"
          android:text="0" />

      <ImageView
          android:id="@+id/w_c_backspace"
          style="@style/light_style"
          android:scaleType="center"
          android:src="@mipmap/c_light" />

      <TextView
          android:id="@+id/w_c_equals"
          style="@style/light_style"
          android:text="=" />

    </LinearLayout>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>