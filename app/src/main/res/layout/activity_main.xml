<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/c_result"
        style="@style/my_style"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@color/white"
        android:fontFamily="@font/baloo_thambi"
        android:text="Ответ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/c_keyboard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        android:ellipsize="end"
        android:textSize="40sp"
        android:maxLines="1"
        android:gravity="end"/>

    <TextView
        android:id="@+id/c_expression"
        style="@style/my_style"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginBottom="116dp"
        android:background="@color/white"
        android:fontFamily="@font/baloo_thambi"
        android:text="Выражение"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/c_keyboard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints,UnknownId"
        tools:layout_editor_absoluteX="0dp"
        android:textSize="40sp"
        android:ellipsize="start"
        android:singleLine="true"
        android:gravity="end"/>

    <LinearLayout
        android:id="@+id/c_keyboard"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/c_ac"
                style="@style/my_style"
                android:src="@mipmap/ac" />

            <TextView
                android:id="@+id/c_open"
                style="@style/my_style"
                android:text="(" />

            <TextView
                android:id="@+id/c_close"
                style="@style/my_style"
                android:text=")" />

            <TextView
                android:id="@+id/c_plus"
                style="@style/my_style"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/c_one"
                style="@style/my_style"
                android:text="1" />

            <TextView
                android:id="@+id/c_two"
                style="@style/my_style"
                android:text="2" />

            <TextView
                android:id="@+id/c_three"
                style="@style/my_style"
                android:text="3" />

            <TextView
                android:id="@+id/c_minus"
                style="@style/my_style"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                style="@style/my_style"
                android:text="4" />

            <TextView
                android:id="@+id/c_five"
                style="@style/my_style"
                android:text="5" />

            <TextView
                android:id="@+id/c_six"
                style="@style/my_style"
                android:text="6" />

            <TextView
                android:id="@+id/c_multi"
                style="@style/my_style"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/c_seven"
                style="@style/my_style"
                android:text="7" />

            <TextView
                android:id="@+id/c_eight"
                style="@style/my_style"
                android:text="8" />

            <TextView
                android:id="@+id/c_nine"
                style="@style/my_style"
                android:text="9" />

            <TextView
                android:id="@+id/c_div"
                style="@style/my_style"
                android:text=":" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/c_dot"
                style="@style/my_style"
                android:text="." />

            <TextView
                android:id="@+id/c_zero"
                style="@style/my_style"
                android:text="0" />

            <ImageView
                android:id="@+id/c_backspace"
                style="@style/my_style"
                android:src="@mipmap/c" />

            <TextView
                android:id="@+id/c_equals"
                style="@style/my_style"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>